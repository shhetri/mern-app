{
  "name": "server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "debug": "yarn build && node --inspect=0.0.0.0:9229 ./dist/index.js",
    "build": "rimraf ./dist && tsc",
    "start": "node ./dist/index.js",
    "pretty": "prettier --write \"./**/*.*\"",
    "lint:fix": "tslint -p . -c tslint.json -t stylish --fix"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "bunyan": "1.8.12",
    "cors": "2.8.5",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "joi": "14.3.1",
    "jsonwebtoken": "8.5.0",
    "mongoose": "5.7.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/bunyan": "1.8.5",
    "@types/cors": "2.8.4",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.1",
    "@types/joi": "14.3.2",
    "@types/jsonwebtoken": "8.3.0",
    "@types/mongoose": "5.3.19",
    "@types/node": "11.9.5",
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-node": "8.0.2",
    "tslint": "5.13.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "./**/*.*": [
      "prettier --write",
      "git add"
    ]
  }
}
